{
  "rewrap.autoWrap.enabled": true,
  "editor.rulers": [
    120
  ],
  "eslint.packageManager": "yarn",
  "eslint.workingDirectories": [
    {
      "mode": "auto"
    }
  ],
  "eslint.options": {
    "ignorePath": "../.gitignore"
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": [
    "javascript",
    "typescript"
  ],
  "cSpell.words": [
    "circuitsvis"
  ],
}
